<main class="contenedor">
	<form
		method="POST"
		class="default-form"
		action="/auth/password/change-password"
	>
		<div class="campo">
			<label for="password">Password</label>
			<input type="password" id="password" name="password" placeholder="Password" />
		</div>
		
		<div class="campo">
			<label for="confirmPassword">Confirm password</label>
			<input type="confirmPassword" id="confirmPassword" name="confirmPassword" placeholder="Confirm password" />
		</div>
		
		<input type="text" hidden value="{{token}}" />
		
		<div class="actions">
			<a href="/auth/login">Login instead</a>
		</div>
		
		<div class="campo">
			<input type="submit" value="Change password" class="btn btn-azul" />
		</div>
	</form>
</main>
