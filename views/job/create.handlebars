<main class="contenedor">
    <form action="/job/create" method="POST" class="default-form">
        <h3>
            General information
        </h3>
        
        <div class="campo">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" placeholder="Title" required />
        </div>
        
        <div class="campo">
            <label for="company">Company</label>
            <input type="text" name="company" id="company" placeholder="Company" required />
        </div>
        
        <div class="campo">
            <label for="location" class="location">Location</label>
            <input type="text" name="location" id="location" placeholder="Location" required />
        </div>
        
        <div class="campo">
            <label for="salary">Salary</label>
            <input type="text" name="salary" id="salary" placeholder="Salary" required />
        </div>
        
        <div class="campo">
            <label for="contract">Contract</label>
            <select name="contract" id="contract">
                <option value="" disabled selected>- Select one -</option>
                <option value="full-time">Full-time</option>
                <option value="part-time">Part-time</option>
                <option value="freelance">Freelance</option>
                <option value="temporal">Temporal</option>
            </select>
        </div>
        
        <div class="campo">
            <label for="description">Description</label>
            <textarea name="description" id="description" cols="30" rows="10" placeholder="Description" required></textarea>
        </div>
    </form>
</main>
