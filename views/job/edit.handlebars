<main class="contenedor">
	{{!-- ~~~ Trix ~~~ --}}
	<link rel="stylesheet" href="/package/trix@2.1.1/dist/trix.css">
	
	{{!-- Scripts --}}
	{{!-- Too heavy 440kb, must be called only when required, if possible even gzip it --}}
	<script
		src="/package/trix@2.1.1/dist/trix.umd.js"
	></script>
	
	{{!-- Formulary --}}
	{{#with job}}
		{{!-- Hidden input to get the value of the contract --}}
		<input type="text" id="previousContract" value="{{contract}}" hidden />
		
		<form action="/job/edit/{{url}}" method="POST" class="default-form">
			<h3>
				General information
			</h3>
			
			<div class="campo">
				<label for="title">Title</label>
				<input type="text" name="title" id="title" placeholder="Title" value="{{title}}" required />
			</div>
			
			<div class="campo">
				<label for="company">Company</label>
				<input type="text" name="company" id="company" placeholder="Company" value="{{company}}" required />
			</div>
			
			<div class="campo">
				<label for="location" class="location">Location</label>
				<input type="text" name="location" id="location" placeholder="Location" value="{{location}}" required />
			</div>
			
			<div class="campo">
				<label for="salary">Salary</label>
				<input type="text" name="salary" id="salary" placeholder="Salary" value="{{salary}}" required />
			</div>
			
			<div class="campo">
				<label for="contract">Contract</label>
				<select name="contract" id="contract" value="{{contract}}">
					<option value="" disabled>- Select one -</option>
					<option value="full-time">Full-time</option>
					<option value="part-time">Part-time</option>
					<option value="freelance">Freelance</option>
					<option value="temporary">Temporary</option>
				</select>
			</div>
			
			<h3>Job description</h3>
			<div class="campo descripcion">
				<label for="description">Description</label>
				<input 
					type="hidden"
					name="description"
					id="description"
					placeholder="Description"
					value="{{{description}}}"
					required
				/>
				<trix-editor input="description"></trix-editor>
			</div>
			
			<h3>Knowledge</h3>
			<ul class="lista-conocimientos">
				{{#selectSkills skills}}
				{{/selectSkills}}
			</ul>
			
			<div class="campo centrar-horizontal">
				<input type="hidden" name="skills" id="skills">
				<input type="submit" value="Publish" class="btn btn-azul"/>
			</div>
		</form>
	{{/with}}
	
	{{!-- Site script always at the end --}}
	<script src="/js/routes/job/edit.js"></script>
</main>
